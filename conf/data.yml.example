# Fluo Home
fluoHome: /path/to/fluo/install
# Fluo Application Name
fluoApp: webindex
# Accumulo table where indexes are stored
accumuloIndexTable: webindex_search
# WAT HDFS directory
watDataDir: /cc/data/wat
# WET HDFS directory
wetDataDir: /cc/data/wet
# WARC HDFS directory
warcDataDir: /cc/data/warc
# Temporary HDFS output path
hdfsTempDir: /cc/temp
# Hadoop conf dir for Spark
hadoopConfDir: /path/to/hadoop/conf
